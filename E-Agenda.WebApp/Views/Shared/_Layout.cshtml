<!DOCTYPE html>
<html lang="pt-BR">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

	<title>@ViewBag.Title</title>

	<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Caprasimo&display=swap" rel="stylesheet">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
	<link href="~/css/styles.css" rel="stylesheet" />

</head>
<body>
    <!-- Side bar -->
    <nav class="sidebar d-none d-md-flex flex-column align-items-center py-3">
        <div class="mb-3">
            <img src="~/imagens/icone.svg" alt="Descrição do ícone">
        </div>
        <ul class="nav flex-column w-100">
            <li class="nav-item my-1">
                <a class="nav-link" href="/" title="Início"><i class="bi bi-house-door"></i></a>
            </li>
            <li class="nav-item my-1">
                <a class="nav-link" href="/contatos" title="Contatos"><i class="bi bi-person-lines-fill"></i></a>
            </li>
            <li class="nav-item my-1">
                <a class="nav-link" href="/compromisso" title="Compromissos"><i class="bi bi-calendar-event"></i></a>
            </li>
            <li class="nav-item my-1">
                <a class="nav-link" href="/categoria" title="Categorias"><i class="bi bi-tags-fill"></i></a>
            </li>
            <li class="nav-item my-1">
                <a class="nav-link" href="/despesa" title="Despesas"><i class="bi bi-cash-stack"></i></a>
            </li>
            <li class="nav-item my-1">
                <a class="nav-link" href="/tarefas" title="Tarefas"><i class="bi bi-check2-square"></i></a>
            </li>
        </ul>
    </nav>

	<!-- Navbar -->
	<nav class="navbar navbar-expand-md px-3 py-2 custom-navbar">
		<div class="container-fluid">
			<a class="navbar-brand d-md-none" href="#" title="Início">
				<img src="~/imagens/icone.svg" alt="Logo" height="40">
			</a>

			<span class="navbar-text ms-auto">
				<h6 class="m-0 fw-bold">e-Agenda Oblivion</h6>
			</span>
		</div>
	</nav>

	<!-- Bottom bar para mobile -->
	<nav class="bottom-bar d-md-none fixed-bottom border-top">
		<ul class="nav justify-content-around align-items-center my-1">
			<li class="nav-item">
				<a class="nav-link " href="/"><i class="bi bi-house-door"></i></a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="contatos"><i class="bi bi-person-lines-fill"></i></a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="compromissos"><i class="bi bi-calendar-event"></i></a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="categorias"><i class="bi bi-tags-fill"></i></a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="despesas"><i class="bi bi-cash-stack"></i></a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="tarefas"><i class="bi bi-check2-square"></i></a>
			</li>
		</ul>
	</nav>

	<div class="main-content">
		<header class="container text-center">
			<h2 class="fw-bold">@ViewBag.Header</h2>
		</header>

		<main>
			@RenderBody()
		</main>
	</div>

	<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js"></script>

	<script>
		AOS.init();
	</script>

	@RenderSection("Scripts", required: false)
</body>
</html>
