@model VisualizarContatoViewModel

<div class="container">
	<div class="row gx-2 gy-2">

		<div class="col-12 col-md-6 col-lg-3">
			<a asp-action="cadastrar" class="card card-visualizar h-100 text-decoration-none" title="Cadastrar novo contato">
				<div class="text-center card-body justify-content-center ">

					<h3 class="fw-semibold my-4">Cadastre novos contatos</h3>

					<div class="mb-2 card-cadastrar-icone">
						<i class="bi bi-plus-circle"></i>
					</div>
					
				</div>
			</a>
		</div>

		@foreach (var item in Model.Registros)
		{
			<div class="col-12 col-md-6 col-lg-3">

				<div class="card card-visualizar ">
					<div class="card-body">
						<p class="card-text "><span class="fw-semibold">Nome:</span> @item.Nome</p>
						<p class="card-text "><span class="fw-semibold">E-mail:</span> @item.Email</p>
						<p class="card-text "><span class="fw-semibold">Telefone:</span> @item.Telefone</p>
						<p class="card-text "><span class="fw-semibold">Cargo:</span> @item.Cargo</p>
						<p class="card-text "><span class="fw-semibold">Empresa:</span> @item.Empresa</p>

						<span class="d-flex gap-1 justify-content-end">
							<a asp-action="editar" asp-route-id="@item.Id" class="btn btn-primary" title="Editar">
								<i class="bi bi-pencil-square"></i>
							</a>

							<a asp-action="excluir" asp-route-id="@item.Id" class="btn btn-danger" title="Excluir">
								<i class="bi bi-trash"></i>
							</a>
						</span>
					</div>
				</div>
			</div>
		}
	</div>
</div>
